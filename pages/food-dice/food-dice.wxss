.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fafcff, #f6f9ff);
  padding: 16px 12px 24px;
}

.header {
  padding: 8px 4px 16px;
}
.title {
  font-size: 22px;
  color: #1f2937;
  font-weight: 700;
}
.subtitle {
  display: block;
  color: #6b7280;
  margin-top: 4px;
}

.dice-card {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 6px 24px rgba(0, 0, 0, 0.06);
}

.dish-display {
  height: 72px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22px;
  color: #111827;
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border: 1px solid #bae6fd;
}
.dish-display.rolling {
  animation: pulse 0.7s ease-in-out infinite;
}
@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.02); }
  100% { transform: scale(1); }
}

.grid-list { margin-top: 16px; display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; }
.grid-item {
  background: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 10px 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.grid-item .emoji { font-size: 22px; line-height: 1; }
.grid-item .name { margin-top: 6px; font-size: 14px; color: #111827; }

.actions { margin-top: 12px; display: flex; gap: 10px; }
.btn.primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  border: none;
}

