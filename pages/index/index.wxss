/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.welcome {
  padding: 12px 16px 4px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.welcome-title {
  font-size: 22px;
  color: #2c3e50;
  font-weight: 600;
}

.welcome-sub {
  display: block;
  margin-top: 4px;
  color: #6b7280;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  padding: 8px 12px 16px;
}

.feature-item {
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border: 1px solid #bae6fd;
  border-radius: 12px;
  padding: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #0c4a6e;
  height: calc((100vw - 24px - 24px) / 3);
  justify-content: center;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon {
  font-size: 24px;
  line-height: 1;
}

.feature-text {
  margin-top: 8px;
}

/* 头部标题样式 */
.header {
  padding: 20px 16px 16px;
  text-align: center;
}

.app-title {
  font-size: 24px;
  color: #2c3e50;
  font-weight: 600;
}

/* 底部作者信息样式 */
.footer {
  padding: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.author, .version {
  font-size: 12px;
  color: #9ca3af;
}

