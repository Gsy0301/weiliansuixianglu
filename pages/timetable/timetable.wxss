.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fafcff, #f6f9ff);
  padding: 12px;
}
.header { display: flex; align-items: baseline; gap: 10px; padding: 8px 2px 12px; }
.date { font-size: 18px; color: #111827; font-weight: 600; }
.week { font-size: 14px; color: #6b7280; }

.table { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 12px; overflow: hidden; }
.thead, .row { display: grid; grid-template-columns: 56px repeat(7, 1fr); }
.th, .td { padding: 10px; border-bottom: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb; overflow: hidden; }
.thead .th { background: #f9fafb; color: #374151; font-weight: 600; text-align: center; }
.corner { border-right: 1px solid #e5e7eb; }
.td.period { background: #f9fafb; color: #374151; text-align: center; writing-mode: vertical-rl; text-orientation: mixed; }
.td.cell { padding: 0; }
.cell-inner { height: 64px; width: 100%; box-sizing: border-box; padding: 0 6px; display: flex; align-items: center; justify-content: center; overflow: hidden; }
.course { display: block; width: 100%; color: #111827; font-size: 14px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }

.modal-mask { position: fixed; left:0; right:0; top:0; bottom:0; background: rgba(0,0,0,0.35); display: flex; align-items: center; justify-content: center; }
.modal { width: 80%; background: #ffffff; border-radius: 14px; padding: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.15); }
.modal-title { font-size: 16px; font-weight: 700; color: #111827; }
.modal-content { display: block; margin-top: 8px; color: #4b5563; }
.btn { margin-top: 12px; }

