/* quiz.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  padding: 20rpx;
}

.questions-scroll {
  height: calc(100vh - 200rpx);
  margin-bottom: 20rpx;
}

.step-container {
  max-width: 750rpx;
  margin: 0 auto;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #64748b;
}

.questions-container {
  margin-bottom: 40rpx;
}

.question-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.question-number {
  margin-right: 20rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.q-index {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 3rpx solid #1e40af;
  color: #1e40af;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
}

.options {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f1f5f9;
  border: 3rpx solid #cbd5e1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #475569;
  transition: all 0.2s ease;
}

.option:active {
  transform: scale(0.95);
}

.option.selected {
  background: #3b82f6;
  border-color: #2563eb;
  color: white;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  margin-top: 40rpx;
}

.btn {
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  min-width: 200rpx;
}

.btn.primary {
  background: #3b82f6;
  color: white;
}

.btn.primary:active {
  background: #2563eb;
}

.btn.secondary {
  background: #e2e8f0;
  color: #475569;
}

.btn.secondary:active {
  background: #cbd5e1;
}

.result-summary {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.score-card, .accuracy-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.score, .accuracy {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.score-label, .accuracy-label {
  display: block;
  font-size: 24rpx;
  color: #64748b;
}

.wrong-questions {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #dc2626;
  margin-bottom: 24rpx;
}

.wrong-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.wrong-item:last-child {
  border-bottom: none;
}

.wrong-question {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
  margin-right: 16rpx;
  min-width: 120rpx;
}

.wrong-answer {
  font-size: 28rpx;
  color: #dc2626;
  margin-right: 16rpx;
}

.correct-answer {
  font-size: 28rpx;
  color: #059669;
}

.perfect-result {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.perfect-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #059669;
}

/* 题目总览样式 */
.question-overview {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.overview-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 16rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
}

.overview-item {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  background: #e2e8f0;
  border: 2rpx solid #cbd5e1;
}

.overview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.overview-toggle {
  font-size: 24rpx;
  color: #3b82f6;
}

.overview-scroll {
  height: calc(70rpx * 4 + 12rpx * 3); /* 固定4行高度 */
  min-height: calc(70rpx * 4 + 12rpx * 3); /* 最小高度也是4行 */
}

/* 全屏题目总览弹窗样式 */
.full-overview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.full-overview-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.full-overview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.full-overview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e40af;
}

.close-btn {
  font-size: 32rpx;
  color: #64748b;
  padding: 8rpx;
}

.full-overview-scroll {
  max-height: 60vh;
}

.full-overview-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 8rpx;
}

.full-overview-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  background: #e2e8f0;
  border: 2rpx solid #cbd5e1;
}

.full-overview-item.answered {
  background: #3b82f6;
  border-color: #2563eb;
}

.full-overview-item.correct {
  background: #10b981;
  border-color: #059669;
}

.full-overview-item.wrong {
  background: #ef4444;
  border-color: #dc2626;
}

.full-overview-item.empty {
  background: #e2e8f0;
  border-color: #cbd5e1;
  color: #64748b;
}

.bottom-sticky {
  position: sticky;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(6px);
  padding: 16rpx 0 8rpx;
}

.action-buttons.fixed {
  position: relative;
  z-index: 1;
}

.overview-item.answered {
  background: #3b82f6;
  border-color: #2563eb;
}

.overview-item.correct {
  background: #10b981;
  border-color: #059669;
}

.overview-item.wrong {
  background: #ef4444;
  border-color: #dc2626;
}

.overview-item.empty {
  background: #e2e8f0;
  border-color: #cbd5e1;
  color: #64748b;
}
