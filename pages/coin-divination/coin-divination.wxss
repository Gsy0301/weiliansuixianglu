/* coin-divination.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 50px;
  color: white;
}

.title {
  font-size: 36px;
  font-weight: bold;
  display: block;
  margin-bottom: 15px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 18px;
  opacity: 0.9;
  font-weight: 300;
}

.coin-area {
  margin-bottom: 30px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 30px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.coin-area.raised {
  margin-top: -10px; /* 上移一点 */
}

.coins-container {
  display: flex;
  justify-content: center;
  gap: 25px;
  margin-bottom: 20px;
}

.coin {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
  transition: all 0.3s ease;
  border: 4px solid #fff;
  position: relative;
  overflow: hidden;
}

.coin.throwing {
  animation: coinFlip 0.3s infinite;
}

.coin-text {
  font-size: 28px;
  font-weight: bold;
  z-index: 2;
  position: relative;
}

/* 阳面 - 白色 */
.coin.yang {
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  color: #333;
}

/* 阴面 - 黑色 */
.coin.yin {
  background: linear-gradient(145deg, #2c2c2c, #1a1a1a);
  color: #fff;
}

/* 未知状态 - 金色 */
.coin:not(.yang):not(.yin) {
  background: linear-gradient(145deg, #ffd700, #ffed4e);
  color: #8b4513;
}

@keyframes coinFlip {
  0% { transform: rotateY(0deg) scale(1); }
  50% { transform: rotateY(180deg) scale(1.1); }
  100% { transform: rotateY(360deg) scale(1); }
}

.control-area {
  display: flex;
  gap: 25px;
  margin: 20px 0 40px 0;
}

.throw-btn, .stop-btn {
  padding: 18px 35px;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.throw-btn {
  background: linear-gradient(145deg, #4CAF50, #45a049);
  color: white;
}

.throw-btn:active {
  transform: translateY(2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.throw-btn:disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.stop-btn {
  background: linear-gradient(145deg, #f44336, #da190b);
  color: white;
}

.stop-btn:active {
  transform: translateY(2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.stop-btn:disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.stop-btn.active {
  background: linear-gradient(145deg, #f44336, #da190b);
  color: white;
}

.copy-btn {
  padding: 18px 24px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: bold;
  border: none;
  background: linear-gradient(145deg, #2196F3, #1976D2);
  color: #fff;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}

.tips {
  color: #fff;
  text-align: center;
  margin-bottom: 16px;
  opacity: 0.9;
}

.panel-area {
  display: flex;
  gap: 12px;
  width: 100%;
}

.panel {
  flex: 1;
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.22);
  border-radius: 12px;
  padding: 12px;
  color: #fff;
}

.panel-title {
  font-weight: bold;
  margin-bottom: 8px;
  display: block;
}

/* 仅将“本卦”“变卦”的标题文字居中 */
.primary-panel .panel-title,
.changed-panel .panel-title {
  text-align: center;
}

.record-lines {
  display: flex;
  flex-direction: column-reverse; /* 从下往上排列 */
  gap: 1px; /* 与本卦一致 */
}

.record-line {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.record-glyph {
  font-size: 22px;
  display: inline-block;
  transform: scaleX(2);
  transform-origin: left center; /* 以左边为基点放大，避免左侧错位 */
  margin-right: 8px;
  line-height: 1.1; /* 与本卦一致 */
}

.change-mark {
  font-size: 18px;
  margin-left: 4px;
}

.line-desc {
  opacity: 0.85;
}

.hexagram {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
}

.hex-lines {
  display: flex;
  flex-direction: column-reverse; /* 显示为自下而上 */
  gap: 1px;
}

.hex-line {
  font-size: 22px; /* 放大一点以呈现三倍符号 */
  letter-spacing: 2px;
  display: inline-block;
  transform: scaleX(2);
  transform-origin: center;
  line-height: 1.1;
}

.hex-line.yang {
  color: #ffffff;
}

.hex-line.yin {
  color: #000000;
}

.hex-name {
  margin-top: 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hex-name-line {
  line-height: 1.4;
}

.placeholder {
  opacity: 0.8;
}

