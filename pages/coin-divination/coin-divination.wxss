/* coin-divination.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 50px;
  color: white;
}

.title {
  font-size: 36px;
  font-weight: bold;
  display: block;
  margin-bottom: 15px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 18px;
  opacity: 0.9;
  font-weight: 300;
}

.coin-area {
  margin-bottom: 50px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 30px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.coins-container {
  display: flex;
  justify-content: center;
  gap: 25px;
  margin-bottom: 20px;
}

.coin {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
  transition: all 0.3s ease;
  border: 4px solid #fff;
  position: relative;
  overflow: hidden;
}

.coin.throwing {
  animation: coinFlip 0.3s infinite;
}

.coin-text {
  font-size: 28px;
  font-weight: bold;
  z-index: 2;
  position: relative;
}

/* 阳面 - 白色 */
.coin.yang {
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  color: #333;
}

/* 阴面 - 黑色 */
.coin.yin {
  background: linear-gradient(145deg, #2c2c2c, #1a1a1a);
  color: #fff;
}

/* 未知状态 - 金色 */
.coin:not(.yang):not(.yin) {
  background: linear-gradient(145deg, #ffd700, #ffed4e);
  color: #8b4513;
}

@keyframes coinFlip {
  0% { transform: rotateY(0deg) scale(1); }
  50% { transform: rotateY(180deg) scale(1.1); }
  100% { transform: rotateY(360deg) scale(1); }
}

.control-area {
  display: flex;
  gap: 25px;
  margin-bottom: 50px;
}

.throw-btn, .stop-btn {
  padding: 18px 35px;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.throw-btn {
  background: linear-gradient(145deg, #4CAF50, #45a049);
  color: white;
}

.throw-btn:active {
  transform: translateY(2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.throw-btn:disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.stop-btn {
  background: linear-gradient(145deg, #f44336, #da190b);
  color: white;
}

.stop-btn:active {
  transform: translateY(2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.stop-btn:disabled {
  background: #cccccc;
  color: #666666;
  box-shadow: none;
}

.stop-btn.active {
  background: linear-gradient(145deg, #f44336, #da190b);
  color: white;
}

